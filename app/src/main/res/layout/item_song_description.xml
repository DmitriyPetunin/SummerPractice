<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/song_image"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintBottom_toTopOf="@+id/song_long_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/song_title"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/song_long_description"
        app:layout_constraintEnd_toStartOf="@+id/song_short_description"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/song_image"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/song_short_description"
        android:layout_width="115dp"
        android:layout_height="23dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/song_long_description"
        app:layout_constraintTop_toBottomOf="@+id/song_image"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="236dp" />

    <TextView
        android:id="@+id/song_long_description"
        android:layout_width="284dp"
        android:layout_height="154dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="396dp" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        app:srcCompat="@drawable/baseline_arrow_back_24"
        tools:ignore="MissingConstraints"/>
</androidx.constraintlayout.widget.ConstraintLayout>